@model MultipleViewModel
@{
    ViewData["Title"] = "Index";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <p class="card-description">
                        Add class <code>.table</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sign</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>SliderImages</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><img src="~/img/@Model.Slider.Sign"/></td>
                                    <td>@Html.Raw(Model.Slider.Title)</td>
                                    <td>@Html.Raw(Model.Slider.Description)</td>
                                    <td>
                                        @foreach (var item in Model.SliderImgs)
                                        {
                                            <img src="~/img/@item.Image" />
                                        }
                                    </td>
                                    <td class="d-flex justify-content-around">
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="detail" asp-route-id="@Model.Id">Detail</a>
                                        <a class="btn btn-warning" asp-controller="Category" asp-action="update" asp-route-id="@Model.Id">Update</a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


